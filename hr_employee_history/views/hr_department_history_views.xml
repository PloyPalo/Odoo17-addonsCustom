<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_department_history_tree" model="ir.ui.view">
        <field name="name">hr.department.history.tree</field>
        <field name="model">hr.department.history</field>
        <field name="arch" type="xml">
            <tree string="Department History">
                <field name="department_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="changed_by"/>
            </tree>
        </field>
    </record>

    <record id="view_department_history_form" model="ir.ui.view">
        <field name="name">hr.department.history.form</field>
        <field name="model">hr.department.history</field>
        <field name="arch" type="xml">
            <form string="Department History">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="department_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="changed_by"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>