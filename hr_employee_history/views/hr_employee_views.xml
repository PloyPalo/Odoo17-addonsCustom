<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Employee Form Inherit -->
    <record id="view_employee_form_inherit_history" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.history</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Employee History" name="employee_history">
                    <group>
                        <button string="Job Positions History" 
                                type="object"
                                name="action_view_job_history"
                                class="oe_stat_button"
                                icon="fa-history"/>
                        <button string="Department History" 
                                type="object"
                                name="action_view_department_history"
                                class="oe_stat_button"
                                icon="fa-sitemap"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>