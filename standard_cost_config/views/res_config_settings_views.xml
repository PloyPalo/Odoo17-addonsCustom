<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pricing_setting_container']" position="inside">
                <setting id="standard_cost_rate" string="Standard Cost Rate" help="Set default percentage rate for standard cost calculations">
                    <div class="content-group">
                        <div class="mt16">
                            <label for="standard_cost_rate" string="Default Rate"/>
                            <field name="standard_cost_rate" class="o_light_label" widget="percentage"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>