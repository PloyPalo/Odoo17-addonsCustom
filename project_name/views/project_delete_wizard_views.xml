<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_delete_wizard_form" model="ir.ui.view">
        <field name="name">project.delete.wizard.form</field>
        <field name="model">project.delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Delete Project">
                <p>Are you sure you want to delete this project? This action cannot be undone.</p>
                <footer>
                    <button name="action_confirm_delete" string="Delete" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>